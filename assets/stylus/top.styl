$primary = #000854

.first-view
	width 100%
	height 500px
	background-image url('/assets/images/factory.jpg')
	background-size cover
	background-position center
	h2
		font-size 4rem
		color white
		padding 100px 0 0 50px

.products, 
.our_company,
.recruit
	margin 2rem 0
	padding 3.5rem 2rem 0
	h2
		margin 0
		color $primary
		span
			font-size .8rem
	.button
		margin 2rem auto
		padding 1rem 0
		width 200px
		text-align: center
		box-shadow 0 0 5px rgba(0,0,0,.2)
		border-radius 50px
		cursor pointer

.recruit
	.box
		width 100%
		height 400px
		background-image url('/assets/images/factory.jpg')
		background-size cover
		background-position center
	.text_box
		height 400px
		width 42%
		margin 0 0 0 auto
		padding 2rem 4%
		background rgba(255,255,255,.6)