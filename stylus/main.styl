$primary = #000854

body
	margin 0
	font-size 15px
	font-family -apple-system, BlinkMacSystemFont, Roboto, "Helvetica Neue", HelveticaNeue, "游ゴシック体", YuGothic, "游ゴシック Medium", "Yu Gothic Medium", "游ゴシック", "Yu Gothic", "Sogoe UI", Verdana, "メイリオ", Meiryo, sans-serif

:visited,:link
	color inherit
	text-decoration none

header
	position fixed
	top 0
	left 0
	display flex
	justify-content space-between
	width 100%
	background rgba(255,255,255,.8)
	h1
		margin-left 1rem
		font-size 1.2rem
		color $primary
	nav
		margin-top .7rem
		margin-right 1rem
		display flex
		flex-wrap nowrap
		li
			list-style none
			margin 0 .5rem
			padding .3rem 0
			color $primary
			font-weight bold

.content
	margin-top 55px
	h1
		text-align center
		margin 2rem 0 0
		color $primary
	.subtitle
		margin 0 0 2rem
		text-align center

.items
	list-style none
	display flex
	flex-wrap wrap
	justify-content space-around
	li
		width 280px
		margin 1rem 0
		box-shadow 0 0 5px rgba(0,0,0,.2)
		border-radius 5px
		.image
			width 100%
			height 150px
			background-position center
			background-size cover
		h3
			text-align center
			margin 1rem 0 0 0 
		.eng_name
			text-align center
			margin 0 0 1rem 0
			font-size .6rem
		.discription
			padding 0 1rem
			font-size .8rem
			text-align justify
